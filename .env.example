# ===========================================
# Database Configuration
# ===========================================
# Use SQLite for development, PostgreSQL for production
DATABASE_URL=sqlite:///./app.db
# DATABASE_URL=postgresql://user:password@postgres:5432/fileforge

# ===========================================
# Security Configuration
# ===========================================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=dev-secret-key

# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=dev-encryption-key

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# Application Configuration
# ===========================================
APP_NAME=FileForge
VERSION=1.0.0
DEBUG=false

# ===========================================
# File Storage Configuration
# ===========================================
# Directory for uploaded files
UPLOAD_DIR=./uploads

# Directory for processed files
PROCESSED_DIR=./processed

# ===========================================
# CORS Configuration
# ===========================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000

# ===========================================
# External Services (Optional)
# ===========================================

# Redis Configuration (for caching and Celery)
REDIS_URL=redis://localhost:6379

# Elasticsearch Configuration (for search)
ELASTICSEARCH_URL=http://localhost:9200

# Celery Broker URL
CELERY_BROKER_URL=redis://localhost:6379/1

# ===========================================
# Email Configuration (Optional)
# ===========================================
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_TLS=true
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@sorter-app.com

# ===========================================
# Slack Configuration (Optional)
# ===========================================
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx
# SLACK_CHANNEL=#sorter-notifications

# ===========================================
# Microsoft Teams Configuration (Optional)
# ===========================================
# TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/xxx

# ===========================================
# AWS S3 Configuration (Optional)
# ===========================================
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_BUCKET_NAME=your-bucket-name

# ===========================================
# Google Drive Configuration (Optional)
# ===========================================
# GOOGLE_CREDENTIALS_FILE=./credentials/google_credentials.json
# GOOGLE_TOKEN_FILE=./credentials/google_token.json

# ===========================================
# Azure Blob Storage Configuration (Optional)
# ===========================================
# AZURE_ACCOUNT_NAME=your-account-name
# AZURE_ACCOUNT_KEY=your-account-key
# AZURE_CONTAINER=default

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ===========================================
# Monitoring & Analytics
# ===========================================
# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn

# ===========================================
# Rate Limiting
# ===========================================
RATELIMIT_DEFAULT=100 per minute
RATELIMIT_STORAGE_URL=redis://localhost:6379/2

# ===========================================
# AI/ML Configuration
# ===========================================
OCR_ENABLED=true
CLASSIFICATION_ENABLED=true
AUTO_TAGGING_ENABLED=true

# ===========================================
# Backup Configuration
# ===========================================
BACKUP_ENABLED=false
BACKUP_RETENTION_DAYS=30
BACKUP_MAX_COUNT=100
BACKUP_INTERVAL_HOURS=24

# ===========================================
# Docker/Production Overrides
# ===========================================
# BACKEND_URL=http://backend:8000
# BACKEND_DOWNLOAD_URL=http://backend:8000/download
